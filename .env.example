# MARBEFES BBT Database - Environment Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Flask Configuration
FLASK_ENV=development  # Options: development, production, testing
FLASK_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# Security (REQUIRED for production)
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here

# Application Settings
APPLICATION_ROOT=  # Subpath for mounting (e.g., /BBTS), leave empty for root

# WMS Service Configuration
WMS_BASE_URL=https://ows.emodnet-seabedhabitats.eu/geoserver/emodnet_view/wms
WMS_VERSION=1.3.0
WMS_TIMEOUT=10

# HELCOM WMS Service Configuration
HELCOM_WMS_BASE_URL=https://maps.helcom.fi/arcgis/services/MADS/Pressures/MapServer/WMSServer
HELCOM_WMS_VERSION=1.3.0

# Map Display Settings
MAX_LAYERS_DISPLAY=20
DEFAULT_MAP_CENTER_LAT=54.0
DEFAULT_MAP_CENTER_LNG=10.0
DEFAULT_MAP_ZOOM=4

# Vector Data Settings
VECTOR_DATA_DIR=data
VECTOR_SIMPLIFY_TOLERANCE=0.001
VECTOR_MAX_FEATURES=10000
ENABLE_VECTOR_SUPPORT=True

# Caching Settings
CACHE_TYPE=simple  # Options: simple, redis, memcached
CACHE_DEFAULT_TIMEOUT=3600  # 1 hour in seconds
WMS_CACHE_TIMEOUT=300  # 5 minutes in seconds

# Layer Filtering
CORE_EUROPEAN_LAYER_COUNT=6

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/emodnet_viewer.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

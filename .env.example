# Environment configuration example
# Copy this file to .env and adjust values as needed

# Flask environment (development, production, testing)
FLASK_ENV=development
FLASK_DEBUG=True

# Security
# IMPORTANT: Generate a secure key for production:
#   python -c "import secrets; print(secrets.token_hex(32))"
# NEVER use the default value in production!
SECRET_KEY=your-secret-key-here-change-in-production

# WMS Service Configuration
WMS_BASE_URL=https://ows.emodnet-seabedhabitats.eu/geoserver/emodnet_view/wms
WMS_VERSION=1.3.0
WMS_TIMEOUT=10

# Application Settings
MAX_LAYERS_DISPLAY=20
DEFAULT_MAP_CENTER_LAT=54.0
DEFAULT_MAP_CENTER_LNG=10.0
DEFAULT_MAP_ZOOM=4

# Vector Data Settings
VECTOR_DATA_DIR=data
VECTOR_SIMPLIFY_TOLERANCE=0.001
VECTOR_MAX_FEATURES=10000
ENABLE_VECTOR_SUPPORT=True

# Caching
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/emodnet_viewer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Optional: Redis cache (if using)
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Deployment Configuration (for deploy.sh)
# ============================================

# SSH username for deployment
DEPLOY_USER=razinka

# Remote server hostname
DEPLOY_HOST=laguna.ku.lt

# Remote application directory
DEPLOY_APP_DIR=/var/www/marbefes-bbt

# Local project directory (default: auto-detected)
# DEPLOY_LOCAL_DIR=/path/to/local/project

# Application subpath for reverse proxy
APPLICATION_ROOT=/BBTS
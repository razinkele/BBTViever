# MARBEFES BBT Database - Environment Configuration Template
# Deployed at: http://laguna.ku.lt/BBTS/
#
# Copy this file to .env and customize for your environment
# See ENVIRONMENT_VARIABLES.md for full documentation

#===============================================================================
# DEPLOYMENT ENVIRONMENT
#===============================================================================

# Environment type: development, production, or testing
FLASK_ENV=development

# Enable debug mode (NEVER in production!)
FLASK_DEBUG=True

# Secret key for session encryption
# PRODUCTION: Generate with: openssl rand -hex 32
# Example: SECRET_KEY=$(openssl rand -hex 32)
SECRET_KEY=dev-secret-key-change-in-production

#===============================================================================
# SERVER CONFIGURATION
#===============================================================================

# Server bind address (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
FLASK_HOST=0.0.0.0

# Server port
FLASK_RUN_PORT=5000
PORT=5000

# Application subpath for nginx deployment
# For laguna.ku.lt/BBTS, this should be empty (nginx handles URL rewriting)
# Only set this if deploying without nginx reverse proxy
APPLICATION_ROOT=

#===============================================================================
# WMS SERVICE CONFIGURATION
#===============================================================================

# EMODnet WMS Service
WMS_BASE_URL=https://ows.emodnet-seabedhabitats.eu/geoserver/emodnet_view/wms
WMS_VERSION=1.3.0
WMS_TIMEOUT=10

# HELCOM WMS Service (Baltic Sea)
HELCOM_WMS_BASE_URL=https://maps.helcom.fi/arcgis/services/MADS/Pressures/MapServer/WMSServer
HELCOM_WMS_VERSION=1.3.0

#===============================================================================
# CACHE CONFIGURATION - Optimized!
#===============================================================================

CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=3600
WMS_CACHE_TIMEOUT=300

#===============================================================================
# LAYER CONFIGURATION
#===============================================================================

CORE_EUROPEAN_LAYER_COUNT=6
MAX_LAYERS_DISPLAY=20

#===============================================================================
# VECTOR DATA CONFIGURATION
#===============================================================================

ENABLE_VECTOR_SUPPORT=True
VECTOR_DATA_DIR=data
VECTOR_SIMPLIFY_TOLERANCE=0.001
VECTOR_MAX_FEATURES=10000

#===============================================================================
# LOGGING
#===============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/emodnet_viewer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

#===============================================================================
# SECURITY (Production)
#===============================================================================

SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

#===============================================================================
# GUNICORN (Production)
#===============================================================================

TIMEOUT=120
MAX_REQUESTS=1000
